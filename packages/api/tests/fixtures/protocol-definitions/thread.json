{
  "protocol": "http://thread-protocol.xyz",
  "published": true,
  "types": {
    "thread": {
      "schema": "http://thread-protocol.xyz/schema/thread",
      "dataFormats": ["text/plain"]
    },
    "message": {
      "schema": "http://thread-protocol.xyz/schema/message",
      "dataFormats": ["text/plain"]
    }
  },
  "structure": {
    "thread": {
      "$actions": [
        {
          "who": "anyone",
          "can":[
            "create",
            "update"
          ]
        },
        {
          "who": "recipient",
          "of": "thread",
          "can": [
            "read"
          ]
        }
      ]
    },
    "message": {
      "$actions": [
        {
          "who": "recipient",
          "of": "thread",
          "can": [
            "read", "create", "update"
          ]
        }
      ]
    }
  }
}