{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES6"
    ],
    "allowJs": true,
    "target": "es6",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "outDir": "dist/esm",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ]
}